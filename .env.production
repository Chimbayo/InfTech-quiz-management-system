# Production Environment Variables
# Copy this to .env.local for production deployment

# Database Configuration
# For PostgreSQL (Recommended for production)
DATABASE_URL="postgresql://username:password@localhost:5432/inftech_quiz_db"

# For SQLite (Current setup)
# DATABASE_URL="file:./dev.db"

# Prisma Studio Configuration
PRISMA_STUDIO_PORT=5556
PRISMA_STUDIO_HOST=localhost

# Application Configuration
NODE_ENV=production
NEXTAUTH_SECRET=your-super-secret-key-here
NEXTAUTH_URL=https://your-domain.com

# Database Management
DB_ADMIN_ENABLED=true
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=24h

# Security
ADMIN_ACCESS_KEY=your-admin-access-key
DATABASE_ENCRYPTION_KEY=your-encryption-key

# Monitoring
ENABLE_DB_LOGGING=true
LOG_LEVEL=info
