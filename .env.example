# Environment Configuration Example
# Copy this to .env.local for your deployment

# Database Configuration
DATABASE_URL="file:./prisma/dev.db"

# For Production PostgreSQL (Recommended)
# DATABASE_URL="postgresql://username:password@host:5432/database_name"

# Prisma Studio Configuration
PRISMA_STUDIO_PORT=5555
PRISMA_STUDIO_HOST=localhost

# Application Configuration
NODE_ENV=development
NEXTAUTH_SECRET=your-super-secret-jwt-key-here
NEXTAUTH_URL=http://localhost:3000

# Database Management Security
DB_ADMIN_ACCESS_KEY=your-secure-admin-key
DATABASE_BACKUP_ENABLED=true
DATABASE_EXPORT_ENABLED=true

# Production Security Settings
ADMIN_DATABASE_ACCESS=true
REQUIRE_ADMIN_AUTH=true

# Monitoring and Logging
ENABLE_DB_LOGGING=false
LOG_LEVEL=info

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Email Configuration for Study Reminders
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# System API Key for Automated Tasks
SYSTEM_API_KEY=your-system-api-key-for-schedulers
